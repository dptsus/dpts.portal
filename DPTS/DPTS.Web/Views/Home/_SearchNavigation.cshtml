@model SearchModel
@using DPTS.Web.Models

@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <fieldset>
        <div class="row">
            <div class="col-md-12 col-sm-6 col-xs-6">
                <div class="form-group">
                    <span class="select">
                        <select class="directory_type" name="directory_type">
                            <option value="">Category</option>
                            <option selected="" data-dir_name="Doctor" id="127" value="doctor">Doctor</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="col-md-12 col-sm-6 col-xs-6">
                <div class="form-group">
                    @Html.DropDownListFor(model => model.SpecialityId, Model.AvailableSpeciality, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12 col-sm-6 col-xs-6">
                <div class="form-group">
                    <input type="text" class="form-control" value="@Model.keyword" name="keyword" id="keyword" placeholder="Type Keyword...">
                </div>
            </div>

            <div class="col-md-12 col-sm-6 col-xs-6">
                <div class="form-group">
                    <input type="text" class="form-control" value="@Model.ZipCode" name="ZipCode" id="ZipCode" placeholder="Search users by zip code">
                </div>
            </div>

            <div class="col-sm-6 col-xs-6">
                <button type="submit" class="tg-btn pull-left">Search</button>
                <input type="hidden" name="view" value="">
            </div>
            <div class="col-sm-6 col-xs-6">
                <button type="reset" class="tg-btn tg-btn-reset pull-right"> <i class="fa fa-rotate-left"></i> <span>Reset</span> </button>
            </div>
        </div>
    </fieldset>
}
