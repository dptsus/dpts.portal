
@{
    ViewBag.Title = "Security Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main" class="tg-page-wrapper tg-haslayout">
    <div class="container">
        <div class="row">
            @Html.Partial("AccountNavigation")
            <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 pull-right">
                <div class="tg-myaccount tg-haslayout">
                    <div class="tg-refinesearcharea">
                        <div class="tg-heading-border tg-small">
                            <h2>change password</h2>
                        </div>
                        <form class="form-resetpassword tg-haslayout">
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <input type="password" name="old_passowrd" placeholder="Old password">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <input type="password" name="new_passowrd" placeholder="New password">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <input type="password" name="confirm_password" placeholder="Retype password">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <button type="submit" class="tg-btn do-change-password">Update</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="tg-bordertop tg-haslayout">
                        <div class="tg-deleteaccount tg-haslayout">
                            <div class="tg-heading-border tg-small">
                                <h2>Delete/De-Activate Account</h2>
                            </div>
                            <div class="tg-description">
                                <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat wisi enim ad minim veniam quis nostrud.</p>
                            </div>
                            <form class="form-resetpassword form-deleteaccount tg-haslayout">
                                <fieldset>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <textarea class="form-control" name="message" placeholder="Why leave us"></textarea>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <input type="password" name="old_password" placeholder="Old password">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <input type="password" name="confirm_password" placeholder="Retype password">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12 tg-padding-15">
                                            <button type="submit" data-action="deleteme" class="tg-btn tg-btn-lg do-process-account">Delete now</button>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12 tg-padding-15">

                                            <button type="submit" data-action="deactivateme" class="tg-btn tg-btn-lg do-process-account">Deactivate now</button>
