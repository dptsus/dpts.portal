                                    <div class="tg-userheading">
                                        <h2><i class="fa fa-briefcase"></i>Experience</h2>
                                    </div>
                                    <ul>
                                        @foreach (var expr in Model.doctor.Experience)
                                        {
                                            <li>
                                                <div class="tg-dotstyletitle">
                                                    <h3>@expr.Title&nbsp;&nbsp;(@expr.StartDate.ToString("MMMM, yyyy")&nbsp;-&nbsp;@expr.EndDate.ToString("MMMM, yyyy"))</h3>
                                                    <span>@expr.Organization</span>
                                                </div>
                                                <div class="tg-description">
                                                    <p>@expr.Description</p>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            <!--Education-->
                            @if (Model.doctor.Education.Any())
                            {
                                <div class="tg-userexperience tg-userqualification">
                                    <div class="tg-userheading">
                                        <h2><i class="fa fa-graduation-cap"></i>Education</h2>
                                    </div>
                                    <ul>
                                        @foreach (var edu in Model.doctor.Education)
                                        {
                                            <li>
                                                <div class="tg-dotstyletitle">
                                                    <h3>
                                                        @edu.Title<strong>&nbsp;&nbsp;</strong>(@edu.StartDate.ToString("MMMM, yyyyy") &nbsp;-&nbsp;@edu.EndDate.ToString("MMMM, yyyyy"))
                                                    </h3>
                                                    <span>@edu.Institute</span>
                                                </div>
                                                <div class="tg-description">
                                                    <p>
                                                        @edu.Description
                                                    </p>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }


                            <!--Awards-->
                            @if (Model.doctor.HonorsAwards.Any())
                            {
                                <div class="tg-userexperience tg-honourawards">
                                    <div class="tg-userheading">
                                        <h2>
                                            <i class="fa fa-trophy"></i>Honours &amp; Awards
                                        </h2>
                                    </div>
                                    <ul>
                                        @foreach (var awd in Model.doctor.HonorsAwards)
                                         {
                                            <li>
                                                <div class="tg-dotstyletitle">
                                                    <h3>@awd.Name &nbsp;&nbsp;(@awd.AwardDate.ToString("MMMM, yyyy"))</h3>
                                                </div>
                                                <div class="tg-description">
                                                    <p>
                                                        @awd.AwardDate
                                                    </p>
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            }
                            <!--Video URL-->
                            @if (!string.IsNullOrWhiteSpace(Model.doctor.VideoLink))
                            {
                                <div class="tg-presentationvideo">
                                    <div class="tg-userheading">
                                        <h2>Presentation Video</h2>
                                    </div>
                                    <div class="video"><iframe width="368" height="200" src="@Model.doctor.VideoLink" frameborder="0" webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen=""></iframe></div>
                                </div>
                            }
                         @if (Model.DoctorPictureModels.Any() && Model.DoctorPictureModels != null)
                         {
                            <div class="tg-userphotogallery">
                                <div class="tg-userheading">
                                    <h2>Photo Gallery</h2>
                                </div>
                                <ul>
                                    @foreach (var pic in Model.DoctorPictureModels)
                                    {
                                        <li>
                                            <figure>
                                                <a href="@pic.FullSizeImageUrl" data-rel="prettyPhoto[iframe]" rel="prettyPhoto[iframe]">
                                                    <img src="@pic.ImageUrl" alt="img-10" width="150" height="150">
                                                    <figcaption><span class="icon-add"></span></figcaption>
                                                </a>
                                            </figure>
                                        </li>
                                    }
                                </ul>
                            </div>
                         }


                            <!--Reviews-->
                            <div class="tg-userreviews">
                                @if (Model.listReviewComments !=null && Model.listReviewComments.Any())
                                {
                                    <div class="tg-userheading">
                                        <h2>@Model.listReviewComments.Count &nbsp;&nbsp;Review(s)</h2>
                                        @*<h2>1&nbsp;&nbsp;Review(s)</h2>
                                            <h2>1&nbsp;&nbsp;Review(s)</h2>*@
                                    </div>
                                    <div class="tg-ratingbox">
                                        <div class="tg-averagerating">
                                            <h3>Average Rating</h3>
                                            <em>4.0</em>
                                            <span class="tg-stars">
                                                <div class="feature-rating user-star-rating">
                                                    <span class="tg-stars star-rating">
                                                        <span style="width:80%"></span>
                                                    </span>

                                                </div>
                                            </span>
                                        </div>
                                        <div id="tg-userskill" class="tg-userskill">
                                            <div class="tg-skill">
                                                <span class="tg-skillname">1 Stars</span>
                                                <span class="tg-skillpercentage">0%</span>
                                                <div class="tg-skillbox">
                                                    <div class="tg-skillholder" data-percent="0%">
                                                        <div class="tg-skillbar"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tg-skill">
                                                <span class="tg-skillname">2 Stars</span>
                                                <span class="tg-skillpercentage">0%</span>
                                                <div class="tg-skillbox">
                                                    <div class="tg-skillholder" data-percent="0%">
                                                        <div class="tg-skillbar"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tg-skill">
                                                <span class="tg-skillname">3 Stars</span>
                                                <span class="tg-skillpercentage">0%</span>
                                                <div class="tg-skillbox">
                                                    <div class="tg-skillholder" data-percent="0%">
                                                        <div class="tg-skillbar"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tg-skill">
                                                <span class="tg-skillname">4 Stars</span>
                                                <span class="tg-skillpercentage">80%</span>
                                                <div class="tg-skillbox">
                                                    <div class="tg-skillholder" data-percent="80%">
                                                        <div class="tg-skillbar" style="width:80%;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tg-skill">
                                                <span class="tg-skillname">5 Stars</span>
                                                <span class="tg-skillpercentage">0%</span>
                                                <div class="tg-skillbox">
                                                    <div class="tg-skillholder" data-percent="0%">
                                                        <div class="tg-skillbar"></div>
                                                    </div>
