                                <div class="tg-honourawards tg-listview-v3 user-section-style">
                                    <div class="tg-userheading">
                                        <h2>Specialties</h2>
                                    </div>
                                    <div class="tg-doctor-profile">
                                        <ul class="tg-tags">
                                            @foreach (var sp in Model.Specialitys)
