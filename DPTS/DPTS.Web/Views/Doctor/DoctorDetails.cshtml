                                            </div>
                                        </div>
                                    </div>
                                    <ul class="tg-reviewlisting">
                                        @foreach (var item in Model.listReviewComments)
                                        {
                                            <li>
                                                <div class="tg-review">
                                                    <figure class="tg-reviewimg">

                                                        @*@{
                                                            picturePath = "/Content/wp-content/themes/docdirect/images/user365x365.jpg";
                                                            profilePicPath = Server.MapPath("~/Uploads/" + Model.Id + "_profile.jpg");
                                                            if (File.Exists(profilePicPath))
                                                            {
                                                                picturePath = "../../Uploads/" + item.CommentOwnerId + "_profile.jpg";
                                                            }
                                                        }
                                                        <img src="@picturePath" alt="Reviewer">*@
                                                        
                                                    </figure>

                                                    <div class="tg-reviewcontet">

                                                        <div class="tg-reviewhead">
                                                            <div class="tg-reviewheadleft">
                                                                @*<h3><a href="https://themographics.com/wordpress/docdirect/clinic/express-care/">Express Care Clinics</a></h3>*@
                                                                <h3>@item.Username</h3>
                                                                <span>@item.DateCreated</span>
                                                            </div>
                                                            <div class="tg-reviewheadright tg-stars star-rating">
                                                                <span style="width:@item.Rating%"></span>
                                                            </div>
                                                        </div>
                                                        <div class="tg-description">
                                                            <p>@item.Comment</p>
                                                        </div>

                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                                @if (Model.doctor.DoctorId != ViewBag.User)
                                {
                                    <div class="tg-leaveyourreview">
                                        <div class="tg-userheading">
                                            <h2>Leave Your Review</h2>
                                        </div>

                                        @*@using (Html.BeginForm("SaveReivewComment", "Doctor", FormMethod.Post))
                                            {*@
                                        <form id="ReviewComment" method="post">
                                            <div class="form-group">

                                                @*<select name="starrating" class="form-control">
                                                        <option value="20">1 Star</option>
                                                        <option value="40">2 Star</option>
                                                        <option value="60">3 Star</option>
                                                        <option value="80">4 Star</option>
                                                        <option value="100">5 Star</option>
                                                    </select>*@

