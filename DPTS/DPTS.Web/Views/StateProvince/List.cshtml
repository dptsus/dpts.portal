@using DPTS.Web.Models
@model IEnumerable<StateProvinceViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    <link href="~/Content/Admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="~/Content/Admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

    int i = 1;
}

<div class="row">
    <div class="col-lg-12">
        <div class="pull-right-button">
            <a href="@Url.Action("Create","StateProvince")" class="btn btn-primary">
                <i class="fa fa-plus-square"></i>
                Add new
            </a>
        </div>

        <h1 class="page-header">State Province</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                State Province
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover" id="Spacility-list">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Country
                                        </th>
                                        <th>
                                            Abbravation
                                        </th>
                                        <th>
                                            Display Order
                                        </th>
                                        <th>
                                            Published
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (i % 2 != 0)
                                        {
                                            <tr class="odd gradeX">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CountryName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Abbreviation)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Published)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                    <a href="#" data-toggle="modal" data-target="#myModal" onclick="deleterecord(@item.Id,'StateProvince')">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr class="even gradeA">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CountryName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Abbreviation)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Published)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                    <a href="#" data-toggle="modal" data-target="#myModal" onclick="deleterecord(@item.Id,'StateProvince')">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
