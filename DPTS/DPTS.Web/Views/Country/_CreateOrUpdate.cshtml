@using DPTS.Web.Models
@model CountryViewModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.id)

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <form role="form">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TwoLetterIsoCode)
                            @Html.EditorFor(model => model.TwoLetterIsoCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TwoLetterIsoCode)
                            <p class="help-block">The two letter ISO code for this country. For a complete list of ISO codes go to: http://en.wikipedia.org/wiki/ISO_3166-1_alpha.  </p>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ThreeLetterIsoCode)
                            @Html.EditorFor(model => model.ThreeLetterIsoCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ThreeLetterIsoCode)
                            <p class="help-block">The three letter ISO code for this country. For a complete list of ISO codes go to: http://en.wikipedia.org/wiki/ISO_3166-1_alpha-3  </p>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumericIsoCode)
                            @Html.EditorFor(model => model.NumericIsoCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumericIsoCode)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DisplayOrder)
                            @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DisplayOrder)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SubjectToVat)
                            @Html.EditorFor(model => model.SubjectToVat)
                            @Html.ValidationMessageFor(model => model.SubjectToVat)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Published)
                            @Html.EditorFor(model => model.Published)
                            @Html.ValidationMessageFor(model => model.Published)
                        </div>
                        @if (Model.Id > 0)
                        {
                            <div class="form-group">
                                    @Html.LabelFor(model => model.DateUpdated)
                                    @Html.DisplayFor(model => model.DateCreated)
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

