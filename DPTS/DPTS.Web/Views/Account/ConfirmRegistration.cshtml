@model DPTS.Web.Models.ConfirmRegisterViewModel
@{
    ViewBag.Title = "Confirm Registration";
}
<main id="main" class="tg-page-wrapper tg-haslayout">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-4 col-sm-6 col-sm-offset-3" style="box-shadow: 0 0 20px 0 rgba(0,0,0,.2), 0 5px 5px 0 rgba(0,0,0,.24);">
                <h4>
                    @ViewBag.Title
                </h4><hr />
                @using (Html.BeginForm("ConfirmRegistration", "Account", FormMethod.Post, new { @class = "tg-form-modal tg-form-signup do-registration-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.RegistrationDetails.Role)
                    @Html.HiddenFor(m => m.RegistrationDetails.FirstName)
                    @Html.HiddenFor(m => m.RegistrationDetails.LastName)
                    @Html.HiddenFor(m => m.RegistrationDetails.Email)
                    @Html.HiddenFor(m => m.RegistrationDetails.PhoneNumber)
                    @Html.HiddenFor(m => m.RegistrationDetails.Password)
                    @Html.HiddenFor(m => m.RegistrationDetails.ConfirmPassword)
                    @Html.HiddenFor(m => m.RegistrationDetails.UserType)
                    @Html.HiddenFor(m => m.RegistrationDetails.CreatedOnUtc)
                    @Html.HiddenFor(m => m.RegistrationDetails.LastIpAddress)
                    @Html.HiddenFor(m => m.RegistrationDetails.Role)

                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ConfirmOtp, new { @class = "form-control", @placeholder = "Enter OTP" })
                            @Html.ValidationMessageFor(model => model.ConfirmOtp, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-success " value="Confirm Registration" />
                                <a class="btn btn-default" href="@Url.Action("ConfirmRegistration","Account")">Resend OTP</a>
                                <a class="btn btn-danger" href="@Url.Action("Login","Account")">Cancel</a>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</main>