@model DPTS.Web.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send Verification Code";
}


<main id="main" class="tg-page-wrapper tg-haslayout">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-4 col-sm-6 col-sm-offset-3" style="box-shadow: 0 0 20px 0 rgba(0,0,0,.2), 0 5px 5px 0 rgba(0,0,0,.24);">
                @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("rememberMe", @Model.RememberMe)

                    <h4>@ViewBag.Title.</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-8">
                            Select Two-Factor Authentication Provider:
                            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                            <input type="submit" value="Submit" class="btn btn-success" />
                            <a class="btn btn-danger" href="@Url.Action("Login","Account")">Cancel</a>

                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
