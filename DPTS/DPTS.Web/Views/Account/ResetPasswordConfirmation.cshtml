@{
    ViewBag.Title = "Reset password confirmation";
}
<main id="main" class="tg-page-wrapper tg-haslayout">
    <div class="container">
        <div class="row">
            <h4>@ViewBag.Title.</h4>
            <hr />
            <div class="col-md-12">
                <p>
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p><a href="@Url.Action("Search","Home")" class="btn btn-success btn-lg">Go to Home</a></p>
            </div>
        </div>
    </div>
</main>
