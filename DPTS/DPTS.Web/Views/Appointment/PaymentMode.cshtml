@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-dialog modal-lg tg-modalcontent" role="document">
@using (Html.BeginForm("PaymentMode", "Appointment", FormMethod.Post, new { id = "availableSchedule-form", @class = "appointment-form" }))
{
        <fieldset class="booking-model-contents">
            <ul class="tg-navdocappointment" role="tablist">
                <li><a href="javascript:;" class="bk-step-2">1. available schedule</a></li>
                <li><a href="javascript:;" class="bk-step-3">2. your contact detail</a></li>
                <li class="active"><a href="javascript:;" class="bk-step-4">3. Payment Mode</a></li>
                <li><a href="javascript:;" class="bk-step-5">4. Finish</a></li>
            </ul>
            <div class="tab-content tg-appointmenttabcontent" data-id="330">
                <div class="tab-pane step-four-contents" id="four" style="display: block;">
                    <div class="bk-payment-methods">
                        <div class="form-group tg-pay-radiobox">
                            <label>
                                <input type="radio" value="local" name="payment" checked="">
                                <span>I will pay locally.</span>
                            </label>
                        </div>
                        <div class="form-group tg-pay-radiobox tg-paypal">
                            <label>
                                <input type="radio" value="paypal" name="payment">
                                <span>I will pay now through Paypal.</span>
                            </label>
                        </div>
                        <div class="form-group tg-pay-radiobox tg-creditcard">
                            <label>
                                <input type="radio" value="stripe" name="payment">
                                <span>I will pay now through Credit Card.</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="tg-btnbox booking-step-button">
                    <button type="submit" name="Command" value="previous" class="tg-btn bk-step-prev">Previous</button>
                    <button type="submit" name="Command" value="next" class="tg-btn bk-step-next">next</button>
                </div>
            </div>
        </fieldset>
}
</div>
